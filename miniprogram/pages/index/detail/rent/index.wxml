<!--pages/index/detail/rent/index.wxml-->
<view class='baseInfo'>
  <text>租赁页面订单信息</text>
</view>
<form bindsubmit="formSubmit">
<view class='list'>
 <view class="name">
 <text>房屋编号</text>
 <text>{{house.h_id}}</text>
 </view>
  <view class='name'>
    <!-- <text>开始时间</text> -->
    <picker mode="date" 
    value="{{begindate}}"
    bindchange="bindbeginDateChange" >
    <view class="picker">
      选择起始日期: <view>{{begindate}}</view>
    </view>
  </picker>
  </view>
  <view class='phone'>
    <view mode="date" value="{{enddate}}" bindchange="bindendDateChange" start="{{begindate}}">
      结束日期： <view>{{enddate}}</view>
    </view>
  </view>
  <view class='phone'>
    <text>联系电话</text>
    <input name="phone" type='text' placeholder-style='font-size:28rpx;' value="{{phone}}" disabled></input>
  </view>
  <view class='phone'>
    <text>出租时间</text>
    <van-stepper value="{{ renttime }}" bind:change="bindrenttime" min="0" max="{{house.max_renttime}}" />
    <!-- <input bindchange="bindrenttime">{{renttime}}</input> -->
  </view>
</view>
 
<van-submit-bar
  price="{{ house.price*100*renttime }}"
  button-text="提交订单"
  bind:submit="formSubmit"
/>
</form>
 
<!-- 模态框 -->
<modal class="modal" title='要提交的信息' hidden="{{modalHidden}}" bindcancel='modalCancel' bindconfirm='modalConfirm'>
    <view name="fw">房屋编号:{{house.h_id}}</view>
    <view name="bg">开始时间:{{begindate}}</view>
    <view name="end">开始时间:{{enddate}}</view>
    <view name="ph">手机:{{phone}}</view>
    <view name="tm">出租时间：{{renttime}}</view>
</modal>
<!-- /模态框 -->