.card {
  margin-left: 1%;
  margin-right: 1%;
  height: 550rpx;
  border-radius: 15rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  margin-top: 100rpx;

  background-color: rgba(0, 217, 255, 0.219);
}

.top {
  padding-top: 5%;
  height: 30%;
  display: flex;
}

.top .flex1
{
width: 100%;
display: flex;
justify-content: space-between;
}

.top .flex1 .font {
  font-weight: bold;
}
.top .flex1 .price {
  font-weight: bold;
  color: red;
  font-size:200%;
}
.up {
  height: 50%;
  display: flex;
}

.img {
  height: 100%;
  width: 50%;
  border-radius: 15rpx;
}


.right {
  width: 50%;
}

.date {
  font-size: small;
  color: #A9A9A9;
  /* font-style: italic; */
}

.down {
  height: 25%;
}

.down .left {
  width: 50%;
  text-align: center;
  font-size: larger;
  font-weight: bolder;
}