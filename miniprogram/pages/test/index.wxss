.card {
  margin-left: 3%;
  margin-right: 3%;
  /* height: 500rpx; */
  height: 50%;
  border-radius: 10rpx;
  box-shadow: 5px 5px 5px #cdcfcf;
  background-color: white;
  bottom: 20%;
}

.top {
  padding-top: 1%;
  height: 30%;
  display: flex;
  align-items: center;
}

.top .flex1 {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.top .flex1 .font {
  font-weight: bold;
}

.top .flex1 .success {
  margin-right: 3%;
  font-weight: bold;
  color: red;
}

.down {
  margin-left: 3%;
  width: 100%;
  height: 50%;
  display: flex;
}

.img {
  width: 50%;
  height: 100%;
  border-radius: 15rpx;
}

.right {
  width: 50%;
}

.right-content {
  font-size: small;
  margin-bottom: 3%;
}

.date {
  font-size: small;
  color: #A9A9A9;
  /* font-style: italic; */
}

.more {
  text-align: center;
  font-size: small;
  color: #A9A9A9;
}